<div class="">文章目录
  <%= link_to 'New article', new_article_path, class: "blog-button btn-primary" %></div>


<%#= form_tag("/articles/index", method: "get") do %>
  <%#= label_tag(:title, "搜索:") %>
  <%#= text_field_tag(:title) %>
  <%#= submit_tag("确定") %>
<%# end %>


<table>
  <tr>
    <th style="width: 20%">Title</th>
    <th style="width: 50%">Text</th>
    <th colspan="3">操作</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to '详情', article_path(article) %></td>
      <td><%= link_to '编辑', edit_article_path(article) %></td>
      <td><%= link_to '删除', article_path(article),
                      method: :delete,
                      data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>

